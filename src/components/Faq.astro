---
type FaqItem = {
  q: string;
  a: string;
};

interface Props {
  items: FaqItem[];
}

const { items } = Astro.props;
---

<div class="faq-list">
  {items.map((item, index) => (
    <details class="faq-item" style={`--faq-order: ${index};`}>
      <summary>
        <span class="faq-index">{index + 1}</span>
        <span class="faq-question">{item.q}</span>
        <span class="faq-toggle" aria-hidden="true"></span>
      </summary>
      <div class="faq-answer">
        <p>{item.a}</p>
      </div>
    </details>
  ))}
</div>
