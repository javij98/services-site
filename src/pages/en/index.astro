---
import Layout from '../../layouts/Layout.astro';
import Faq from '../../components/Faq.astro';
import LucideIcon from '../../components/LucideIcon.astro';
import PackageCard from '../../components/PackageCard.astro';
import ProcessSteps from '../../components/ProcessSteps.astro';
import Section from '../../components/Section.astro';
import { content, type Lang } from '../../data/siteContent';

const lang: Lang = 'en';
const t = content[lang];
const defaultCvUrl = 'https://javier-jimenez-molina.vercel.app';
const defaultContactEmail = 'jjime981@gmail.com';

const normalizeUrl = (value: string) => {
  if (value.startsWith('http://') || value.startsWith('https://')) {
    return value;
  }

  return `https://${value}`;
};

const cvEnv = (import.meta.env.PUBLIC_CV_URL ?? '').trim().replace(/\/$/, '');
const cvBase = normalizeUrl(cvEnv || defaultCvUrl);
const cvHref = `${cvBase}/${lang}`;
const emailEnv = (import.meta.env.PUBLIC_CONTACT_EMAIL ?? '').trim();
const email = (emailEnv || defaultContactEmail).replace(/^mailto:/i, '');
const mailto = `mailto:${email}`;
const defaultFormAction = `https://formsubmit.co/${encodeURIComponent(email)}`;
const contactFormAction = (import.meta.env.PUBLIC_CONTACT_FORM_ACTION ?? defaultFormAction).trim();
const servicesEnv = (import.meta.env.PUBLIC_SERVICES_URL ?? '').trim().replace(/\/$/, '');
const contactSuccessUrl = servicesEnv ? `${servicesEnv}/${lang}?contact=ok#contact` : undefined;

const trustStack: Array<{ name: string; icon: 'atom' | 'server' | 'container' | 'cloud' }> = [
  { name: 'React', icon: 'atom' },
  { name: 'Node', icon: 'server' },
  { name: 'Docker', icon: 'container' },
  { name: 'AWS', icon: 'cloud' },
];
---

<Layout title={t.meta.title} description={t.meta.description} lang={lang}>
  <section class="section hero">
    <h1>{t.hero.headline}</h1>
    <p>{t.hero.subheadline}</p>
    <div class="hero-actions">
      <a href={t.hero.ctaPrimaryHref} class="btn btn-primary-glow">{t.hero.ctaPrimaryLabel}</a>
      <a href={t.hero.ctaSecondaryHref} class="btn btn-outline-cyan">{t.hero.ctaSecondaryLabel}</a>
    </div>
    <div class="hero-trust">
      <span class="hero-trust-label">Tech stack:</span>
      <ul class="hero-trust-list">
        {
          trustStack.map((tech) => (
            <li class="tech-badge">
              <LucideIcon name={tech.icon} size={16} class="tech-icon" />
              <span>{tech.name}</span>
            </li>
          ))
        }
      </ul>
    </div>
  </section>

  <Section id="what" title={t.what.title}>
    <div class="solution-grid">
      {
        t.what.cards.map((card) => (
          <article class="card solution-card">
            <LucideIcon name={card.icon} size={34} class="solution-icon" />
            <h3>{card.title}</h3>
            <p>{card.description}</p>
          </article>
        ))
      }
    </div>
  </Section>

  <Section id="packages" title={t.packages.title}>
    <p class="section-intro">{t.packages.intro}</p>
    <div class="pricing-grid">
      {t.packages.items.map((item) => (
        <PackageCard
          name={item.name}
          forWho={item.forWho}
          bullets={item.bullets}
          ctaLabel={item.ctaLabel}
          ctaHref={item.ctaHref}
          featured={item.featured}
        />
      ))}
    </div>
    <p class="pricing-footnote">{t.packages.footnote}</p>
  </Section>

  <Section id="maintenance" title={t.maintenance.title}>
    <div class="maintenance-split">
      <div class="maintenance-copy">
        <p class="maintenance-headline">{t.maintenance.headline}</p>
        <p>{t.maintenance.text}</p>
        <div class="uptime-pill">
          <span class="uptime-label">{t.maintenance.uptimeLabel}</span>
          <strong>{t.maintenance.uptimeValue}</strong>
        </div>
      </div>
      <article class="card maintenance-card">
        <h3>Coverage included</h3>
        <ul class="feature-list">
          {
            t.maintenance.coverage.map((item) => (
              <li>
                <span class="feature-check" aria-hidden="true">âœ“</span>
                <span>{item}</span>
              </li>
            ))
          }
        </ul>
      </article>
    </div>
  </Section>

  <Section id="process" title={t.process.title}>
    <ProcessSteps steps={t.process.steps} />
  </Section>

  <Section id="faq" title={t.faq.title}>
    <Faq items={t.faq.items} />
  </Section>

  <Section id="contact" title={t.contact.title}>
    <p>{t.contact.text}</p>
    <form class="contact-form card" action={contactFormAction} method="POST">
      <input type="hidden" name="_subject" value="[services-site] New inquiry from website" />
      <input type="hidden" name="_template" value="table" />
      {contactSuccessUrl && <input type="hidden" name="_next" value={contactSuccessUrl} />}
      <input class="contact-honeypot" type="text" name="_honey" tabindex="-1" autocomplete="off" />

      <div class="contact-form-grid">
        <label class="form-field">
          <span>{t.contact.form.nameLabel}</span>
          <input
            type="text"
            name="name"
            placeholder={t.contact.form.namePlaceholder}
            required
            autocomplete="name"
          />
        </label>

        <label class="form-field">
          <span>{t.contact.form.emailLabel}</span>
          <input
            type="email"
            name="email"
            placeholder={t.contact.form.emailPlaceholder}
            required
            autocomplete="email"
          />
        </label>
      </div>

      <label class="form-field">
        <span>{t.contact.form.companyLabel}</span>
        <input
          type="text"
          name="company"
          placeholder={t.contact.form.companyPlaceholder}
          autocomplete="organization"
        />
      </label>

      <label class="form-field">
        <span>{t.contact.form.messageLabel}</span>
        <textarea
          name="message"
          rows="6"
          placeholder={t.contact.form.messagePlaceholder}
          required
        ></textarea>
      </label>

      <div class="contact-form-actions">
        <button type="submit" class="btn btn-primary-glow">{t.contact.form.submitLabel}</button>
        <a href={cvHref} class="btn btn-secondary">{t.contact.cvLabel}</a>
      </div>
    </form>

    <p class="contact-form-note">
      {t.contact.form.hint}
      <a href={mailto}>{t.contact.emailLabel}</a>
    </p>
  </Section>
</Layout>
